/**app.wxss**/
page {
  box-sizing: border-box;
  height: 100%;
}
page view {
  box-sizing: border-box;
}

.flexR {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flexC {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.back10{
  width: 100%;
  height: 20rpx;
  display: flex;
  background: #F5F5F5;
}
.back1{
  width: 100%;
  height: 1rpx;
  display: flex;
  background: #F5F5F5;
}

/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 0.4em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.no-more {
  display: flex;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #ddd;
  font-size: 32rpx;
  letter-spacing: 0px;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.no-more view {
  width: 100rpx;
  height: 1rpx;
  background-color: #ddd;
}

.no-more text {
}

/* 只显示一行、结尾... */
.ell{
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}