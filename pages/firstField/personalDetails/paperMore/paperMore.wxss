.tabTit {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: solid 1px #eee;
  position: fixed;
  top: 0;
  width: 750rpx;
  z-index: 1;
  background: #fff;
  font-size: 15px;
  text-align: center;
}
.scroll-view {
  margin-top: 60rpx;
}

/*弹性盒模型*/

.box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: flex;
}

.tab-text {
  display: flex;
  width: 100%;
  justify-content: center;
}

.tab-name {
  font-size: 24rpx;
  width: 120rpx;
  color: #999;
}

.tab-name-true {
  font-size: 24rpx;
  width: 120rpx;
  color: #48c3af;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5px;
  align-self: center;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  z-index: 1;
  background: #fff;
  border-bottom: solid 1px #eee;
  text-align: center;
  margin-top: 2rpx;
}

.content-msg-scr {
  height: 350rpx;
}

.content-msg-scr-false {
  height: 100%;
}

.activeScreen {
  background: #efefef;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  border: solid 1px #eee;
  margin: 0 0 20rpx 26rpx;
  font-size: 24rpx;
  color: #48c3af;
  border-radius: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.noActiveScreen {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  border: solid 1px #eee;
  margin: 0 0 20rpx 26rpx;
  font-size: 24rpx;
  border-radius: 26rpx;
  background: #efefef;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.fields-title {
  color: #333;
  font-size: 24rpx;
  text-align: left;
  padding-left: 20rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.screen-input {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  align-items: center;
}

.input-back {
  background: #a9a9a9;
  height: 4rpx;
  width: 25rpx;
  margin: 0 20rpx 0 20rpx;
}

.search-input {
  width: 150rpx;
  height: 50rpx;
  background: #efefef;
  font-size: 24rpx;
  text-align: center;
  color: #333;
}

.view-bottom {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  bottom: 0;
  background: #f9f9f9;
}

.bottom-left {
  float: left;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #f9f9f9;
  border-radius: 0;
}

.bottom-left::after {
  border: none;
}

.bottom-left-text {
  margin-left: 6rpx;
  font-size: 28rpx;
  color: #333;
}

.bottom-back-1 {
  width: 5rpx;
  height: 30rpx;
  background: #d8d8d8;
}

.bottom-right {
  float: left;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #48c3af;
  border-radius: 0;
  line-height: 2.8;
}

.bottom-right::after {
  border: none;
}

.bottom-right-text {
  margin-left: 6rpx;
  font-size: 28rpx;
  color: #333;
}

.research-paper {
  margin-top: 40rpx;
}

.research-paper-title {
  display: flex;
  align-items: center;
}

.paper-title-image {
  width: 36rpx;
  height: 36rpx;
}

.paper-title-text {
  width: 90rpx;
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.paper-title-text-msg {
  width: 190rpx;
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.paper-title-num {
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #333;
  width: 60rpx;
}

.paper-title-more {
  font-size: 24rpx;
  color: #999;
  width: 100%;
  text-align: right;
  margin-left: 10rpx;
}

.paper-title-more- {
  width: 20rpx;
  height: 16rpx;
  border-top: 2px solid #d8d8d8;
  border-right: 2px solid #d8d8d8;
  transform: rotate(45deg);
}

.paper-items {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.paper-items-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.paper-items-msg {
  margin-top: 10rpx;
  display: flex;
}

.paper-items-msg-time {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #999;
}

.paper-items-msg-num {
  margin-left: 160rpx;
  font-size: 28rpx;
  color: #999;
}

.paper-items-publish {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #999;
}

.paper-items-authors {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #999;
}

.paper-items-back-1 {
  margin-top: 20rpx;
  background: #e5e5e5;
  height: 2rpx;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  background: #d8d8d8;
}
