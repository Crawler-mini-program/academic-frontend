.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background: #fff;
}

swiper {
  /* height: calc(100vh - 510rpx); */
  height: calc(100vh - 80rpx);
  overflow: auto;
}

swiper-item {
  overflow: auto !important;
}

.content-menu {
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: #fff;
  padding: 20rpx;
}

.top-text {
  margin-top: 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.content-publish {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.publish-title {
  color: #333;
  font-size: 28rpx;
}

.publish-title- {
  color: #333;
  font-size: 28rpx;
  width: 15%;
}

.content-top {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.publish-con {
  color: #3bbab0;
  font-size: 28rpx;
}

.paper-items-back-1 {
  margin-top: 20rpx;
  background: #e5e5e5;
  height: 2rpx;
}

.author-title {
  margin-top: 40rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}

.author-msg {
  display: inline-block;
}

.author-view {
  text-align: center;
  display: flex;
  width: 130rpx;
  margin-left: 20rpx;
  margin: 10rpx;
  box-shadow: 0rpx 0rpx 2rpx 2rpx #e5e5e5;
  border-radius: 4rpx;
  flex-direction: column;
}

.author-img-bg {
  display: flex;
  width: 60rpx;
  height: 24rpx;
}

.author-msg {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.author-img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-top: 20rpx;
}

.author-name {
  font-size: 24rpx;
  color: #333;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 120rpx
}

.msg-title {
  margin-top: 45rpx;
  color: #333;
  font-weight: bold;
  font-size: 36rpx;
}

.msg {
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  color: #888;
}

.on {
  display: block;
  text-overflow: clip;
  overflow: visible;
  font-size: 30rpx;
  color: #888;
}

.msg-show {
  color: #3bbab0;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.bottom {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  bottom: 0;
  background: #f9f9f9;
}

.bottom-left {
  float: left;
  width: 50%;
  display: flex;
  height: 80rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #f9f9f9;
  border-radius: 0;
  padding: 0
}

.bottom-left::after {
  border: none;
}

.bottom-left-image {
  width: 28rpx;
  height: 28rpx;
}

.bottom-left-text {
  margin-left: 6rpx;
  font-size: 28rpx;
  color: #333;
}
.bottom-back-1 {
  width: 2rpx;
  height: 30rpx;
  background: #d8d8d8;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
