.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background: #f5f5f5;
}
swiper {
  /* height: calc(100vh - 510rpx); */
  height: calc(100vh - 80rpx);
  overflow: auto;
}

swiper-item {
  overflow: auto !important;
}
.content-msg {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.paper-name-msg {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  height: 100rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.paper-name-msg- {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.name-title {
  font-size: 28rpx;
  color: #333;
  width: 170rpx;
}
.name-title-xing {
  font-size: 28rpx;
  color: #333;
}

.title {
  display: flex;
  flex-direction: row;
  width: 170rpx;
}

.title-xing {
  width: 20rpx;
  height: 20rpx;
}

.name-title-msg {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}

.name-title- {
  font-size: 28rpx;
  color: #333;
  width: 240rpx;
}

.name-text {
  padding-left: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.name-text- {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
  padding-bottom: 20rpx;
}
.msg {
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #666;
}
.on {
 display: block;
 text-overflow: clip;
 overflow: visible;
   font-size: 24rpx;
  color: #666;
}
.msg-show{
  color: #3BBAB0;
  font-size: 28rpx;
  margin-top: 10rpx
}

.patent-items-back-10 {
  background: #f5f5f5;
  height: 20rpx;
}
.bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  bottom: 0;
  background: #f9f9f9;
}
.bottom-left{
  float: left;
  width: 100%;
  display: flex;
  height: 80rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #f9f9f9;
  border-radius: 0;
}
.bottom-left::after {
  border: none;
}
.bottom-left-image{
  width: 28rpx;
  height: 28rpx;
}
.bottom-left-text {
  margin-left: 6rpx;
  font-size: 28rpx;
  color: #333;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}