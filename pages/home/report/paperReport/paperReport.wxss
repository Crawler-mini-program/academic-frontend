.container {
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 100%;
  height: 100%;
}

.keywords-msg {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}

.keywords-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.keywords-title-back {
  height: 32rpx;
  width: 8rpx;
  background: #48c3af;
  border-radius: 6rpx;
}

.keywords-title-name {
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
  margin-left: 10rpx;
}
.keywords-input{
  height: 68rpx;
  background: #fff;
  font-size: 24rpx;
  color: #999999;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #e3e3e3;
  text-align: left;
  padding-left: 10rpx;
}
.bottom-commit{
  height: 88rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  background: #48C3AF;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  position: fixed;
  bottom: 80rpx;
  color: #fff;
  font-size: 28rpx;

}
