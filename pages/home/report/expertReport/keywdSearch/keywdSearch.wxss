.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: #fff;
}
.search-view {
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background: #fff;
}

.search-content {
  background: white;
  width: 700rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: auto;
  padding-left: 20rpx;
  padding-bottom: auto;
  margin: auto;
  height: 80rpx;
  border-radius: 25px;
  -moz-box-shadow: 2px 2px 10px #c9c9c9;
  -webkit-box-shadow: 2px 2px 10px #c9c9c9;
  box-shadow: 2px 2px 10px #c9c9c9;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-input {
  width: 500rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 155rpx;
  height: 80rpx;
  margin-right: 0rpx;
  background-color: #41b5a4;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border: none;
  position: relative;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}
.scroll-view{
  display: block;
  width: 100%;
}
.search-msg{
  display: flex;
flex-direction: column;
}
.search-msg-item{
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx
}
.back-item{
  height: 2rpx;
  background: #e3e3e3
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
