.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: #fff;
}

.item-msg- {
  display: flex;
  flex-direction: row;
  margin-bottom: 88rpx;
}

.item-msg {
  display: flex;
  flex-direction: row;
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 2rpx solid #e3e3e3;
  align-items: center
}

.item-name {
  font-size: 28rpx;
  color: #666;
  padding-left: 20rpx;
  width: 93%
}
.item-select{
  width: 35rpx;
  height: 35rpx;
}

.bottom-commit {
  height: 88rpx;
  left: 0rpx;
  right: 0rpx;
  display: flex;
  background: #48c3af;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0rpx;
  color: #fff;
  font-size: 28rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
