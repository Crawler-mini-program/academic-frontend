.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: #fff;
}

.keywords-msg {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}

.keywords-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.keywords-title-back {
  height: 32rpx;
  width: 8rpx;
  background: #48c3af;
  border-radius: 6rpx;
}

.keywords-title-name {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-left: 10rpx;
}
.keywords-title-icon{
  font-size: 20rpx;
  color: red
}

/* 人数数量 */
.keywords-title-num{
  font-size: 20rpx;
  color: #666;
  margin-left: 5rpx;
}
/* 职称选择 */
.select-title-name {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-left: 10rpx;
  width: 15%;
}
.select-title-select {
  width: 85%;
  font-size: 24rpx;
  color: #48c3af;
  margin-right: 20rpx;
  text-align: right
}
.select-msg{
  display: -webkit-flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 20rpx;
}
.select-msg-name{
  flex: 0 0 auto;
  width: 21%;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 25rpx;
  margin-bottom: 20rpx;
  text-align: center;
  border-radius: 30rpx;
  background: #e3e3e3;
  color: #48c3af;
  font-size: 24rpx
}
.input-msg {
  display: flex;
  margin-right: 20rpx;
  margin-left: 20rpx;
  align-items: center;
  border-bottom:2rpx solid #e3e3e3;
}

.keywords-name {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  background: #fff;
  font-size: 24rpx;
  color: #999;
  padding-left: 10rpx;
}
.keywords-input {
  flex: 1;
  height: 68rpx;
  background: #fff;
  font-size: 24rpx;
  color: #999;
  padding-left: 30rpx;
}

.keywords-input-add {
  display: inline-block;
  background: #d67575;
  border-radius: 8rpx;
  color: #fff;
  font-size: 20rpx;
  height: 35rpx;
  line-height: 35rpx;
  width: 60rpx;
  text-align: center;
}

.keywords-input-delete {
  margin-left: 20rpx;
  display: inline-block;
  background: #3bbab0;
  border-radius: 8rpx;
  color: #fff;
  font-size: 20rpx;
  height: 35rpx;
  line-height: 35rpx;
  width: 60rpx;
  text-align: center;
}
/* 地区内容 */
.address-msg{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 30rpx;
  line-height: 50rpx;
}

.bottom-commit {
  height: 88rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  background: #48c3af;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  position: fixed;
  bottom: 80rpx;
  color: #fff;
  font-size: 28rpx;
}
/**地区选择**/
.picker-content{
}

.tui-picker-detail{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 35rpx;
  padding: 0 10px;
  overflow: hidden;
}

.back {
  background: #e3e3e3;
  height: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
