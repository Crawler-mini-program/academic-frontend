  -webkit-box-orient: vertical;
}

.orgztion-msg-shchoolNum {
  color: #d46969;
  font-size: 36rpx;
}

.orgztion-msg-shchool-fields {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.orgztion-msg-shchool-fields-view {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  background: #eff3f9;
  border-radius: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.orgztion-msg-shchool-fields-view-fiendName {
  color: #666;
  font-size: 24rpx;
  padding-left: 20rpx;
