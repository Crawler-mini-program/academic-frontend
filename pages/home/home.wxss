  text-align: center;
}

.fields-one-top-num-active {
  font-size: 28rpx;
  color: #48c3af;
}

.fields-one-top-image {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.fields-one-top-image-1 {
  width: 6rpx;
