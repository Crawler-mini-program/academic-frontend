.fields-two-msg {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  margin: 20rpx;
  box-shadow: 0rpx 0rpx 4rpx 4rpx #e5e5e5;
  border-radius: 8rpx;
}

.fields-two-msg-view {
  flex: 0 0 auto;
  display: flex;
  flex-direction: row;
  width: 33.33333333%;
