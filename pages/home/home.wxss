/**
*机构
**/

.orgztion-msg {
  display: flex;
  flex-direction: column;
  width: 490rpx;
  height: 280rpx;
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 4rpx 4rpx #e5e5e5;
}

.orgztion-msg-shchool {
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.orgztion-msg-right {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.orgztion-msg-image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
