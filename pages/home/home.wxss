/* pages/home/home.wxss */

.home-menu {
  display: block;
  height: 100%;
}

/* 顶部banner和搜索框 */

.home-top {
  height: 310rpx;
  width: 100%;
}

/* banner */

.top-banner {
  width: 100%;
  height: 100%;
}

.top-banner image {
  width: 100%;
  height: 100%;
}

/* 搜索框 */

.seach-info {
  background: #fff;
}

.search-img {
  position: absolute;
  top: 45rpx;
  width: 28rpx;
  padding-left: 310rpx;
  height: 30rpx;
  z-index: 100;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.seach-info-input {
  left: 28rpx;
  position: absolute;
  top: 18rpx;
  width: 694rpx;
  height: 70rpx;
  background: #eef7ff;
  border-radius: 60rpx;
  border: 0;
  font-size: 28rpx;
  text-align: center;
  padding-top: 5rpx;
}

.line {
  display: flex;
  padding: 5rpx;
}

.text-center {
  margin: 0 auto;
}

/******报告*****/

.home-report {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx
}
.home-report-item{
  flex: 0 0 auto;
  display: flex;
  flex-direction: row;
  width: 46%;
  height: 130rpx;
  color: #797979;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 0rpx 4rpx 4rpx #e5e5e5;
  border-radius: 8rpx;
  margin-top: 20rpx;
  margin-left: 20rpx
}
.home-report-item-img{
  width: 66rpx;
  height: 66rpx;
}
.home-report-item-name{
  font-size: 28rpx;
  color: #797979;
  margin-left: 18rpx
}

/**
*牛人
**/

.genius-content {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.top {
  margin-left: 20rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.top-back {
  height: 32rpx;
  width: 8rpx;
  background: #48c3af;
  border-radius: 6rpx;
}

.top-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-left: 10rpx;
}

.top-title-more {
  display: flex;
  width: 77%;
  justify-content: flex-end;
  flex-direction: row;
  margin-right: 0;
  align-items: center;
}

.title-more {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.title-img {
  width: 20rpx;
  height: 26rpx;
}

.genius-msg {
  width: 240rpx;
  height: 330rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 0rpx 4rpx 4rpx #e5e5e5;
  border-radius: 8rpx;
}

.genius-msg-field {
  font-size: 20rpx;
  color: #9b9b9b;
}

.genius-msg-image {
  margin-top: 10rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.genius-msg-view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.genius-msg-realName {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #333;
  /* margin-left: 50rpx; */
}

.genius-msg-rank {
  margin-top: 16rpx;
  font-size: 16rpx;
  color: #d26161;
  margin-left: 5rpx;
}

.genius-msg-field-num {
  font-size: 40rpx;
  color: #53666c;
  margin-top: 20rpx;
}

.genius-msg-field-bottom {
  display: flex;
  flex-direction: row;
}

.genius-msg-field-bottom-num1 {
  font-size: 20rpx;
  color: #d26161;
}

.genius-msg-field-bottom-num1-false {
  font-size: 20rpx;
  color: #48c3af;
}

.genius-msg-field-bottom-num2 {
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #d26161;
}

.genius-msg-field-bottom-num2-false {
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #48c3af;
}

/**
*热门领域
**/

.hot-fields-content {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

