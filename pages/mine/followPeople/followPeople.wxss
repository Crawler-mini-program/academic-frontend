.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
/**tab切换**/

.bottom-back-1 {
  width: 2rpx;
  height: 40rpx;
  background: #eee;
}
.nav {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #eee;
  justify-content: space-around;
  text-align: center;
}

.default {
  line-height: 60rpx;
  text-align: center;
  flex: 1;
  color: #999;
  font-size: 28rpx;
}

.checked {
  line-height: 60rpx;
  text-align: center;
  color: #3bbab0;
  flex: 1;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}
/***关注的人才***/
.msg-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 136rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.left-content {
  display: flex;
  align-items: center;
  width: 100%;
  flex-direction: row;
  margin-top: 10rpx;
  padding-left: 20rpx;
}

.left-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  max-width: 100rpx
}

.left-msg {
  align-self: center;
  flex-direction: column;
  margin-left: 10rpx;
  width: 450rpx
}

.left-msg-name {
  font-size: 28rpx;
  color: #4a494a;
        overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.left-msg-schoolName {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #999;
        overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.right-bottom-true {
  width: 120rpx;
  height: 50rpx;
  background: #fff;
  line-height: 2.3;
  padding: 0;
}

.right-bottom-true-text {
  color: #666;
  font-size: 24rpx;
}

.right-bottom-false {
  position: absolute;
  right: 20rpx;
  width: 120rpx;
  height: 50rpx;
  background-color: #3BBAB0;
  line-height: 2.3;
  padding: 0;
}

.right-bottom-false-text {
  color: #fff;
  font-size: 24rpx;
}

.header {
  width: 65%;
  margin: 0.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.back-top{
  background: #f5f5f5;
  height: 1rpx;
}
