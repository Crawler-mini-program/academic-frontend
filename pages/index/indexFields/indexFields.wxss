.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #fff;
}

.fidles-top-text {
  height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 60rpx;
  font-weight: bold;
}

.fields-text {
  display: flex;
  text-align: left;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #333;
}

.fields-msg-pro {
  padding-top: 20rpx;
}

.two-msg {
  padding-top: 10rpx;
  height: 500rpx;
}

.active {
  background: #59c29c;
  width: 155rpx;
  height: 50rpx;
  line-height: 47rpx;
  float: left;
  border: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: center;
  /* border-color:#e64340; */
}

.pro-name {
  width: 155rpx;
  height: 50rpx;
  line-height: 47rpx;
  float: left;
  border: solid 1px #59c29c;
  margin: 20rpx 0 0 26rpx;
  font-size: 24rpx;
  color: #333;
  border-radius: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: center;
}

.fields-content {
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}

.fields-content-two {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.bottom-view {
  position: fixed;
  bottom: 60rpx;
  left: 30rpx;
  right: 30rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #ffffff;
  height: 80rpx;
  background: -webkit-linear-gradient(left, #41b5a4, #72e3b3);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
