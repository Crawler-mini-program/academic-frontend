.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #fff
}
.top-title{
  display: flex;
  height: 58rpx;
  line-height: 58rpx;
  border-bottom: 2rpx solid #EAEAEA;
  padding: 0 32rpx;
}
.top-title text{
  color: #999999;
  font-size: 24rpx
}
swiper {
  height: calc(100vh - 198rpx);
  overflow: auto;
}

swiper-item {
  overflow: auto !important;
}
.content{
 display: flex;
 padding: 20rpx 40rpx;
 align-items: center;
 border-bottom: 2rpx solid #F3F3F3;
}

.content-left{
  width: 18%;

}
.content-left image{
width: 30rpx;
  height: 38rpx
}

.select-bt {
  margin-left: 30rpx;
  height: 46rpx;
  width: 102rpx;
  display: flex;
  background: #39B493;
  align-items: center;
  justify-content: center;
  border-radius: 27rpx;
  color: #fff;
  font-size: 26rpx;
}
.bottom{
  display: flex;
  width: 100%;
  height: 130rpx;
  padding: 0 40rpx;
  align-items: center;
}
.bottom image{
  width: 15%;
  height: 96rpx;
}
