.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: #fff;

}

.fields-text{
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-top: 100rpx;
}

.selected {
  display: flex;
  flex-direction: column;
  z-index: 100;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-top: 98rpx;
}

.top-selected {
  width: 100%;
  display: flex;
  align-items: center;
  align-self: center;
}
.top-selected-show{
  width: 100%;
  display: flex;
  align-items: center;
  align-self: center;
}

.top-selected-image {
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 54rpx;
  
}

.select_box {
  margin-top: 6rpx;
  background-color: #fff;
  width: 100%;
  overflow: hidden;
  animation: myfirst 0s;
  font-size: 24rpx;
  align-self: center;
  border-radius: 8rpx;
  box-shadow:0px 2px 7px #9E9E9E;
  height: 540rpx
}

.select_box- {
  margin-top: 6rpx;
  background-color: #fff;
  width: 100%;
  overflow: hidden;
  animation: myfirst 0s;
  font-size: 24rpx;
  align-self: center;
  border-radius: 8rpx;
  box-shadow:0px 2px 7px #9E9E9E;
}
.select {
  text-align: left;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #EBEBEB;
  padding-left: 26rpx;
  display: flex;
  flex-direction: column;
  color: #39B493;
  font-weight: bold
}
.select_text{
  font-size: 24rpx;
  padding-left: 46rpx;
  margin-top: 18rpx;
  margin-bottom:36rpx
}

/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}

.seach-info-input {
  width: 100%;
  font-size: 28rpx;
  text-align: left;
  padding-left: 20rpx;
  height: 70rpx;
  background: #eef7ff;
  border-radius: 12rpx;
  border: 0;
}

.fields-start{
  height: 88rpx;
  display: flex;
  background: #48c3af;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  left: 70rpx;
  right: 70rpx;
  bottom: 200rpx
}